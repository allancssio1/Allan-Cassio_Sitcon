// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patiente {
  id        Int      @id @default(autoincrement())
  name      String
  birthDate DateTime
  cpf       String
  status    Boolean

  @@map("patients")
}

model Professional {
  id        Int         @id @default(autoincrement())
  name      String
  status    Boolean
  Attendant Attendant[]
  Request   Request[]

  @@map("professionals")
}

model RequestType {
  id          Int         @id @default(autoincrement())
  description String
  status      Boolean
  Procedure   Procedure[]
  Request     Request[]

  @@map("requestTypes")
}

model Procedure {
  id          Int     @id @default(autoincrement())
  description String?
  status      Boolean

  type_id       RequestType @relation(fields: [requestTypeId], references: [id])
  requestTypeId Int
  Attendant     Attendant[]
  Request       Request[]

  @@map("procedures")
}

model Attendant {
  id Int @id @default(autoincrement())

  procedure_id Procedure @relation(fields: [procedureId], references: [id])
  procedureId  Int

  professional_id Professional @relation(fields: [professionalId], references: [id])
  professionalId  Int

  @@map("attendants")
}

model Request {
  id   Int    @id @default(autoincrement())
  date String
  hour String

  professional_id Professional @relation(fields: [professionalId], references: [id])
  professionalId  Int

  requestType_id RequestType @relation(fields: [requestTypeId], references: [id])
  requestTypeId  Int

  procedure_id Procedure @relation(fields: [procedureId], references: [id])
  procedureId  Int

  @@map("requests")
}
